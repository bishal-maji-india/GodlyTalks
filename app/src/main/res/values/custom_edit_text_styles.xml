<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StandardEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_standard</item>
        <item name="android:background">@color/transparent</item>


    </style>
    <style name="BoxEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_standard</item>
        <item name="android:background">@drawable/bg_card_view</item>


    </style>
</resources>